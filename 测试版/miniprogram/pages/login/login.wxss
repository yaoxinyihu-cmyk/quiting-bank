.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}
.background {
  width: 100%;
  height: 50%;
}
.title {
  font-size: 24px;
  font-weight: bold;
  margin-top: -100rpx;
}
.subtitle {
  font-size: 16px;
  color: #666;
  margin-bottom: 20rpx;
}
.input {
  width: 80%;
  height: 80rpx;
  border-radius: 20rpx;
  margin: 10rpx 0;
  padding: 0 20rpx;
  font-size: 16px;
  border: 1px solid #ddd;
  color: #333;
}
.login-button,
.register-button {
  width: 80%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 18px;
  margin-top: 20rpx;
}
.login-button {
  background-color: #8bc34a;
  color: #fff;
}
.register-button {
  background-color: #fbc02d;
  color: #fff;
}