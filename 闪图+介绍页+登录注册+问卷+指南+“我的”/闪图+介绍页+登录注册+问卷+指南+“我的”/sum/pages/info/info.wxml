<view class="container">

<!-- 头部 -->
<view class="header">
  <text class="hello">你好，{{userName}}！</text>
  <image src="/assets/images/avatar.png" class="avatar" mode="aspectFit"></image>
</view>

<!-- 信息卡片 -->
<view class="info-card">
  <view class="info-row">
    <view class="info-item">
      <view class="info-inline">
        <text class="info-value">{{age}}</text>
        <text class="info-unit">岁</text>
      </view>
      <text class="info-label">年龄</text>
    </view>
    <view class="info-item">
      <text class="info-value">{{gender}}</text>
      <text class="info-label">性别</text>
    </view>
  </view>

  <view class="info-row">
    <view class="info-item">
      <view class="info-inline">
        <text class="info-value">{{smokeYears}}</text>
        <text class="info-unit">年</text>
      </view>
      <text class="info-label">烟龄</text>
    </view>
    <view class="info-item">
      <view class="info-inline">
        <text class="info-value">{{clockDays}}</text>
        <text class="info-unit">天</text>
      </view>
      <text class="info-label">累计打卡</text>
    </view>
  </view>
</view>

<!-- 戒烟进度 -->
<view class="progress-section">
  <text class="section-title">戒烟进度</text>

  <view class="progress-item">
    <text class="progress-label">戒烟进度</text>
    <view class="progress-bar-wrapper">
      <view class="progress-bar-box">
        <progress percent="{{quitProgress}}" activeColor="#A4C639" stroke-width="10"></progress>
      </view>
      <text class="progress-value">{{quitProgress}}%</text>
    </view>
  </view>

  <view class="progress-item">
    <text class="progress-label">累计攒钱</text>
    <view class="progress-bar-wrapper">
      <view class="progress-bar-box">
        <progress percent="{{saveMoneyProgress}}" activeColor="#A4C639" stroke-width="10"></progress>
      </view>
      <text class="progress-value">{{saveMoney}}元</text>
    </view>
  </view>

  <view class="progress-item">
    <text class="progress-label">累计少吸</text>
    <view class="progress-bar-wrapper">
      <view class="progress-bar-box">
        <progress percent="{{lessSmokeProgress}}" activeColor="#A4C639" stroke-width="10"></progress>
      </view>
      <text class="progress-value">{{lessSmoke}}支</text>
    </view>
  </view>
</view>

</view>
