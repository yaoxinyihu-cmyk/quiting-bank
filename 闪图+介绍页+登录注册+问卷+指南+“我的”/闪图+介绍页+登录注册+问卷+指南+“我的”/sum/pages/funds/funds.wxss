page {
  margin: 0;
  padding: 0;
  background-color: #ffffff;
  height: 100%;
}

.container {
  margin: 0;
  padding-top: 0;
  background-color: #ffffff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部绿色背景块，左右带斜切 */
.green-bg {
  width: 110%;
  min-height: 240rpx; /* 保证顶部有足够高度 */
  background-color: #a6b56d;
  clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  position: relative;
}

/* 禁烟图标 */
.no-smoking-icon {
  position: absolute;
  left: 70rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 120rpx;
  opacity: 0.2;
}

/* 白色卡片 */
.card {
  background-color: #fff;
  position: relative;
  top: -320rpx; /* 卡片浮动到绿色背景下方 */
  margin: 0 auto;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0px 6rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 90%;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #555;
}

.eye-icon {
  width: 30rpx;
  margin-left: 10rpx;
}

.amount {
  text-align: center;
  font-size: 60rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.today {
  text-align: center;
  font-size: 26rpx;
  background-color: #f7f7f7;
  padding: 10rpx 0;
  border-radius: 30rpx;
  width: 60%;
  margin: 0 auto;
}

.today .highlight {
  color: #a6b56d;
}

.month-info {
  text-align: center;
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
}

.statistic {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.btn-out {
  background-color: #dfe4c5;
  color: #888;
  flex: 1;
  margin-right: 20rpx;
}

.btn-in {
  background-color: #a6b56d;
  color: #fff;
  flex: 1;
}
