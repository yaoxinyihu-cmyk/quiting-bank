page {
  background-color: #ffffff;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.cards-wrapper {
  flex: 8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.section {
  width: 150%;
  aspect-ratio: 1.7 / 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

/* 第二个 section 的间距调小，减少与提示文字的空隙 */
.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.card {
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
  border-radius: 25rpx; /* 圆角 */
  padding: 20rpx;
  background: linear-gradient(90deg, #ffffff, #f9eed3); /* 白色到浅黄色渐变 */
  border: 1rpx solid #777777; /* 浅灰色边框 */
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle-canvas {
  width: 200rpx;
  height: 200rpx;
}

.icon-img {
  width: 200rpx;
  height: 200rpx;
}

.card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.common-info {
  font-size: 28rpx;
  color: #333;
}

.highlight {
  font-weight: bold;
  color: #333;
  font-size: 34rpx;
}

.bg-icon {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  opacity: 0.2;
  z-index: 0;
}

/* 温馨提示 —— 调整间距，不占比例高度 */
.note-container {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;     /* 卡片与提示文字间距 */
  margin-bottom: 330rpx;  /* 提示文字与底部的间距 */
}

.note {
  font-size: 24rpx;
  color: #777;
  padding: 5rpx 0;
}
