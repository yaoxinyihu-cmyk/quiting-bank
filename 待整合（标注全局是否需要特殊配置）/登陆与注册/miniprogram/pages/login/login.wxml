<view class="container">
  <image class="background" src="/images/login_bg.png" mode="aspectFill"></image>
  <view class="title">Quiting Bank</view>
  <view class="subtitle">欢迎使用戒烟银行，请登录您的账户</view>
  
  <input value="{{username}}" bindinput="inputUsername" class="input" type="text" placeholder="用户名"></input>
  <input value="{{password}}"  bindinput="inputPassword" class="input" type="password" placeholder="密码"></input>
  
  <button class="login-button" bindtap="goToLogin" >登录</button>
  <button class="register-button" bindtap="goToRegister">注册</button>
</view>