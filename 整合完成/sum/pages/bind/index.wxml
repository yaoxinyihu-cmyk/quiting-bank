<view style="padding-top: {{statusBarHeight}}px;">
  <view class="nav-3col">
    <text class="nav-left back" bindtap="goBack">返回</text>
    <text class="nav-title-center">亲友绑定</text>
    <view class="nav-right"></view>
  </view>
</view>

<view class="page">
  <view class="qr-card">
    <view class="avatar-wrap">
      <image class="avatar" src="/assets/images/avatar3.png"/>
    </view>

    <!-- 占位二维码（可以换成你自己的图片） -->
    <view class="qr-box">
      <image class="qr" src="/assets/images/qrcode.png" mode="aspectFit"/>
    </view>

    <button class="act">扫描二维码，完成绑定</button>

    <view class="tip-wrap">
      <text class="tip-title">温馨提示</text>
      <text class="tip">安全上网，请不要随意向他人出示二维码</text>
    </view>
  </view>
</view>