page{ background:#F2E8CF; }

/* 顶部三栏导航 */
.nav-3col{
  height: 96rpx;
  display:flex; align-items:center; justify-content:space-between;
  padding: 0 24rpx;
}
.nav-left,.nav-right{ width:120rpx; }
.nav-title-center{ flex:1; text-align:center; font-weight:700; font-size:32rpx; }

.wrap{ padding:24rpx; }
.card{
  background:#fff; border-radius:16rpx; box-shadow:0 8rpx 24rpx rgba(0,0,0,.06);
  padding:24rpx;
}
.title{ font-weight:700; margin-bottom:10rpx; }
.li{ color:#444; margin:8rpx 0; }
.mt{ margin-top:16rpx; }
.tip{ color:#666; margin:6rpx 0; line-height:1.6; }