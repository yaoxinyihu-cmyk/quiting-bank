.header-wrap {
    width: 100%;
    background-color: #a5b74a;
    position: relative;
  }
  .status-bar {
    height: 20px;
  }
  .header-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    height: 44px;
  }
  .back-icon {
    width: 20px;
    height: 20px;
  }
  .header-title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }
  .more-icon {
    width: 20px;
    height: 20px;
  }
  .sub-header {
    padding: 10px 20px 50px;
  }
  .subtitle-1 {
    font-size: 18px;
    font-weight: bold;
  }
  .subtitle-2 {
    font-size: 14px;
    color: #222;
    margin-top: 6px;
    display: block;
    line-height: 1.4;
  }
  .arc-shape {
    position: absolute;
    left: 0;
    bottom: -30px;
    width: 100%;
    height: 60px;
  }
  