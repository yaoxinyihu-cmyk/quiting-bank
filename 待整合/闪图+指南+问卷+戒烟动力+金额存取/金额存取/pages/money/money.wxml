<view class="container">

<!-- 顶部绿色背景块 -->
<view class="green-bg">
  <image class="no-smoking-icon" src="/images/no_smoking.png" mode="widthFix"></image>
</view>

<!-- 白色卡片 -->
<view class="card">
  <view class="title">
    累计节约
    <image class="eye-icon" src="/images/eye.png" mode="widthFix"></image>
  </view>

  <view class="amount">{{totalSaved}}</view>

  <view class="today">
    今日节约 <text class="highlight">{{todaySaved}}</text> 元
  </view>

  <view class="month-info">
    本月未取回烟钱：{{monthUnwithdrawn}}元
  </view>

  <view class="statistic">
    <view class="stat-item">
      <view class="stat-label">累计转入(元)</view>
      <view class="stat-value">{{totalTransferIn}}</view>
    </view>
    <view class="stat-item">
      <view class="stat-label">亲友入账(元)</view>
      <view class="stat-value">{{friendAccount}}</view>
    </view>
  </view>

  <view class="btn-group">
    <button class="btn-out" disabled bindtap="onTransferOut">转出</button>
    <button class="btn-in" bindtap="onTransferIn">转入</button>
  </view>
</view>

</view>
