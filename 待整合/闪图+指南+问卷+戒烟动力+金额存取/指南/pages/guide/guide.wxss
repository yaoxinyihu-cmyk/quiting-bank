/* pages/guide/guide.wxss */
.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #fdfaf2;
  }
  
  .banner {
    width: 100%;
  }
  
  .title {
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    margin: 15px 10px;
    color: #333;
  }
  
  .scroll-content {
    flex: 1;
    padding: 0 15px 15px;
    box-sizing: border-box;
  }
  
  .section {
    margin-bottom: 20px;
  }
  
  .section-title {
    font-size: 16px;
    font-weight: bold;
    color: #000;
    margin-bottom: 10px;
  }
  
  .qa {
    margin-bottom: 15px;
  }
  
  .q {
    font-weight: bold;
    color: #333;
    margin-bottom: 5px;
  }
  
  .a {
    color: #555;
    line-height: 1.6;
  }
  
  .highlight {
    color: #d9534f;
    font-weight: bold;
  }
  