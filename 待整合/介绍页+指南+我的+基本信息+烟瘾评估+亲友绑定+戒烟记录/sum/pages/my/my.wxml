<view class="my-container">

<!-- 用户信息区 -->
<view class="user-info">
  <image class="avatar" src="/assets/images/avatar.png"></image>
  <view class="user-text">
    <view class="name">{{userInfo.name}}</view>
    <view class="motto">{{userInfo.motto}}</view>
  </view>
  <button class="info-btn" bindtap="goInfo">基本信息</button>
</view>

<!-- 成就卡片 -->
<view class="achievement-card">
  <view class="achievement-text">
    <text>您已累计戒烟{{quitDays}}天，节省{{moneySaved}}元</text>
    <text>获得称号：{{title}}</text>
  </view>
  <image class="medal" src="/assets/images/medal.png" mode="aspectFit"></image>
</view>


<!-- 功能菜单 -->
<view class="menu">
  <view class="menu-item" bindtap="goAddictionTest">
    <image src="/assets/icons/addiction.png" class="menu-icon"></image>
    <text>烟瘾评估</text>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item" bindtap="goMotivation">
    <image src="/assets/icons/motivation.png" class="menu-icon"></image>
    <text>戒烟动力</text>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item" bindtap="goFriendBind">
    <image src="/assets/icons/friend.png" class="menu-icon"></image>
    <text>亲友绑定</text>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item" bindtap="goQuitRecord">
    <image src="/assets/icons/record.png" class="menu-icon"></image>
    <text>戒烟记录</text>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item" bindtap="goFunds">
    <image src="/assets/icons/funds.png" class="menu-icon"></image>
    <text>金额存取</text>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item" bindtap="goAiguide">
    <image src="/assets/icons/record.png" class="menu-icon"></image>
    <text>AI助手</text>
    <text class="arrow">›</text>
  </view>
</view>

<!-- 底部提示 -->
<view class="bottom-tip">更多功能正在建设中...</view>
</view>
