<view class="container">
  <!-- 右上角扫码按钮 -->
  <image src="/assets/images/scan-icon.png" class="scan-icon" mode="widthFix"></image>

  <!-- 二维码卡片 -->
  <view class="qrcode-card">
    <image src="/assets/images/avatar.png" class="avatar" mode="aspectFit"></image>
    <image src="/assets/images/qrcode.png" class="qrcode-img" mode="aspectFit"></image>
  </view>

  <!-- 扫描二维码文字提示（替换原按钮） -->
  <view class="bind-tip">扫描二维码，完成绑定</view>

  <!-- 提示信息 -->
  <view class="tip-section">
    <text class="tip-title">温馨提示</text>
    <text class="tip-text">安全上网，请不要随意向他人出示二维码</text>
  </view>
</view>
