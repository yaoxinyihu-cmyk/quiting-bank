.guide-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f5f2e8;
  }
  
  .top-nav {
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    white-space: nowrap;
  }
  
  .nav-item {
    display: inline-block;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  .nav-item.active {
    font-weight: bold;
    border-bottom: 4rpx solid #007AFF;
    color: #007AFF;
  }
  
  /* 内容区左右留白 */
  .content-area {
    flex: 1;
    padding: 0 30rpx; /* 上下0，左右30rpx */
    box-sizing: border-box;
    line-height: 1.8; /* 提升阅读体验 */
    background-color: #f5f2e8;
  }
  
  /* banner 图片也保持左右留白（遵循外层 padding） */
  .banner {
    width: 100%;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    display: block;
  }
  
  /* 区块统一间距 */
  .section {
    margin-bottom: 40rpx;
  }
  
  /* 标题样式 */
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    text-align: center;
  }
  
  .section-subtitle {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  /* Q&A 样式 */
  .q {
    font-weight: bold;
    margin-top: 10rpx;
  }
  
  .a {
    margin-top: 5rpx;
    margin-bottom: 20rpx;
    line-height: 1.8;
  }
  
  /* 加粗通用 */
  .bold {
    font-weight: bold;
  }
  